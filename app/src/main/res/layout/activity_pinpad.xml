<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <ProgressBar
            android:id="@+id/pbWaiting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:background="#FF0000"/>

        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only DES(TDES) is used in this DEMO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/border"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/etKeySlot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="99"
                    android:hint="[1, 255]"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/btnIsKeysExist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IsKeysExist"
                    android:textSize="17sp"
                    android:layout_margin="1dp"
                    android:padding="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/btnDeleteKeys"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DeleteKeys"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnDeleteAllKeys"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DeleteAllKeys"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:padding="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLoadTEK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TEK"
                    android:textSize="12sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnLoadMK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MK"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnLoadEMK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EMK"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnLoadWK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WK"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:padding="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCalcMac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CalcMac_99"
                    android:textSize="10sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnEncDecData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:text="Enc_Dec_99"
                    android:textSize="10sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnCalcHash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CalcHash_99"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"
                    android:padding="0dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPinBlockWKOnline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PinBlockWK_Online_99"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnPinBlockWKOffline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PinBlockWK_Offline_99"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"
                    android:padding="0dp"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/border"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDownloadDukpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DownloadDukpt"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnDukptGetKSN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DukptGetKSN"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnDeleteDukpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DeleteDukpt"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:padding="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCalcMacDukpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CalcMac_Dukpt"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnEMVEnc_Dukpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EMVEnc_Dukpt"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnEMVDec_Dukpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EMVDec_Dukpt"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:padding="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/btnPinBlockDukpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PinBlockDukpt"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnPinBlockDukptCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PinBlockDukptCustom"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:padding="0dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGenerateRsa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GenerateRSA_9"
            android:textSize="10sp"
            android:padding="0dp"/>

        <Button
            android:id="@+id/btnReadRsaPublicKey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ReadRSAPK_9"
            android:textSize="10sp"
            android:layout_marginStart="3dp"
            android:padding="0dp"/>

        <Button
            android:id="@+id/btnRsaEnc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RsaEnc/Ver_9"
            android:textSize="10sp"
            android:layout_marginStart="3dp"
            android:padding="0dp"/>

        <Button
            android:id="@+id/btnRsaDec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RsaDec/Sign_9"
            android:textSize="10sp"
            android:layout_marginStart="3dp"
            android:padding="0dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnClearAllKeys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear All Keys!(MK/WK + DUKPTs + RSA)"
        android:textSize="18sp"
        android:padding="0dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"

        android:background="@drawable/border">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"/>

    </ScrollView>


</LinearLayout>