<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="7dp">

        <TextView
            android:id="@+id/tvPrinterTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="Printer Demo - Patrick"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/pbWaiting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF6666"
            android:visibility="invisible"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Gray:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderGray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:valueFrom="-6"
                    android:valueTo="6"
                    android:value="0"
                    android:stepSize="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Speed:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderPrintSpeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="10"
                    android:stepSize="1"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnPrintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print Text"
                android:textSize="20sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPrintTextLeftRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Print Text Left Right"
                    android:textSize="13sp"
                    android:layout_margin="1dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnPrintTextLeftMiddleRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Print Text Left Middle Right"
                    android:textSize="13sp"
                    android:layout_margin="1dp"
                    android:padding="0dp"/>


            </LinearLayout>

            <Button
                android:id="@+id/btnPrintBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print Barcode"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnPrintQrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print Qrcode"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnPrintImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print Image"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnPrintImageFromPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print Image from Photo"
                android:textSize="20sp"/>


            <Button
                android:id="@+id/btnPrintBitmapCanvas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print Bitmap Canvas"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnLineFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line Feed"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSppBluetoothPrinter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPP Bluetooth Printer"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnWifiPrinter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WiFi Printer"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/tvMqttInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>


        </LinearLayout>



    </ScrollView>
    
</LinearLayout>