<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="30dp"
        android:text="SDK Demo - Patrick"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:background="@drawable/border"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEMV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMV"

                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnBeeper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beeper"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnLed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LED"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnPinpad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PinPad"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnPrinter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnNewSerialPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serial Port"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnCameraScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera Scan"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnMagCardReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MagCardReader"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnICCardReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ICCardReader"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnApiTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="API Test"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>