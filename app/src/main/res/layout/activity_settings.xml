<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="7dp">

        <TextView
            android:id="@+id/tvPrinterTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="Settings Demo - Patrick"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/pbWaiting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF6666"
            android:visibility="invisible"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Brightness:"
                        android:textSize="15sp"
                        android:gravity="center"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderBrightness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:valueFrom="1"
                        android:valueTo="255"
                        android:value="128"
                        android:stepSize="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnGetBrightness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Get Brightness"
                        android:textSize="13sp"
                        android:layout_margin="1dp"
                        android:padding="0dp"/>

                    <Button
                        android:id="@+id/btnSetBrightness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set Brightness"
                        android:textSize="13sp"
                        android:layout_margin="1dp"
                        android:padding="0dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etApnName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_margin="1dp"
                        android:textSize="15sp"
                        android:text="ApnName123"/>

                    <EditText
                        android:id="@+id/etMobileCountryCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_margin="1dp"
                        android:textSize="15sp"
                        android:hint="MCC"/>

                    <EditText
                        android:id="@+id/etMobileNetworkCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_margin="1dp"
                        android:textSize="15sp"
                        android:hint="MNC"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnQueryApnByName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Query By Name"
                        android:textSize="13sp"
                        android:layout_margin="1dp"
                        android:padding="0dp"/>

                    <Button
                        android:id="@+id/btnAddApn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add APN"
                        android:layout_margin="1dp"
                        android:textSize="13sp"
                        android:padding="0dp"/>

                    <Button
                        android:id="@+id/btnDeleteApnByName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delete By Name"
                        android:layout_margin="1dp"
                        android:textSize="13sp"
                        android:padding="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Password:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/etLockPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="123456" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSetLockPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set Lock Password"
                        android:textSize="15sp"
                        android:layout_margin="1dp"
                        android:padding="0dp"/>

                    <Button
                        android:id="@+id/btnClearLockPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear Lock Password"
                        android:layout_margin="1dp"
                        android:textSize="15sp"
                        android:padding="0dp"/>

                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGetTimeSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Get Time Settings"
                    android:textSize="13sp"
                    android:layout_margin="1dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnSetTimeSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Time Settings"
                    android:textSize="13sp"
                    android:layout_margin="1dp"
                    android:padding="0dp"/>


            </LinearLayout>
            <Button
                android:id="@+id/btnTtsTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TTS Testing (Need download for the first time)"/>

        </LinearLayout>
        
    </ScrollView>

</LinearLayout>